{
  "name": "warp-terminal-launcher",
  "displayName": "Warp Terminal Launcher",
  "description": "Launch Warp terminal from VS Code with configurable path, cross-platform support, and terminal integration.",
  "version": "0.0.1",
  "publisher": "azmolla",
  "icon": "icon.webp",
  "engines": {
    "vscode": "^1.94.0"
  },
  "bugs": {
    "url": "https://github.com/AbiruzzamanMolla/warp-terminal-launcher-vscode-extension/issues"
  },
  "homepage": "https://marketplace.visualstudio.com/items?itemName=azmolla.warp-terminal-launcher",
  "categories": ["Other"],
  "keywords": ["terminal", "warp", "shell", "vscode"],
  "activationEvents": [
    "onCommand:warp-terminal-launcher.launch",
    "onCommand:warp-terminal-launcher.setDefault"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "warp-terminal-launcher.launch",
        "title": "Launch Warp Terminal"
      },
      {
        "command": "warp-terminal-launcher.setDefault",
        "title": "Set Warp as Default Terminal"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Warp Terminal Launcher",
      "properties": {
        "warpTerminalLauncher.path": {
          "type": "string",
          "default": "",
          "description": "Full path to the Warp executable. Leave empty to use default per OS."
        },
        "warpTerminalLauncher.openInWorkspace": {
          "type": "boolean",
          "default": true,
          "description": "Open Warp in the current VS Code workspace folder."
        }
      }
    },
    "terminal": {
      "id": "warp",
      "name": "Warp",
      "icon": "$(terminal)",
      "path": "${config:warpTerminalLauncher.path}",
      "args": []
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AbiruzzamanMolla/warp-terminal-launcher-vscode-extension.git"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.94.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "eslint": "^9.19.0",
    "typescript": "^5.7.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  },
  "extensionKind": ["workspace", "ui"],
  "os": ["win32", "darwin", "linux"]
}
